---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    
    <!-- 最適化されたフォント読み込み -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600&display=swap">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600&display=swap" media="print" onload="this.media='all'">
<noscript>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600&display=swap">
</noscript>
    
    <!-- SEO対策の基本設定 -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:locale" content="ja_JP" />
    <link rel="canonical" href={Astro.url} />
    
    <style is:global>
      :root {
  --font-serif-en: 'Source Serif Pro', serif;
  --font-mincho-jp: 'BIZ UDPMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', serif;
  --color-background: #e5e8f7;
  --color-text: #0039a2;
  
  /* レンダリング最適化 */
  font-display: swap;
}

/* フォント描画最適化 */
* {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

      body {
        font-family: var(--font-mincho-jp);
        background-color: var(--color-background);
        color: var(--color-text);
        margin: 0;
        padding: 0;
        line-height: 1.8;
      }

      .container {
        max-width: 700px;
        width: 90%;
        margin: 0 auto;
        padding: 60px 20px;
      }

      h1, h2, h3 {
        font-family: var(--font-serif-en);
        color: var(--color-text);
        font-weight: 400;
      }

      a {
        color: var(--color-text);
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: all 0.3s ease;
        }

      a:hover {
        opacity: 1.0;
        border-bottom: 1px solid var(--color-text);
        }

      section {
        margin-bottom: 80px;
      }

/* 記事見出しのスタイル（余白メインの静かなデザイン） */
.prose h2 {
  font-size: 1.3rem;
  margin-top: 5rem;
  margin-bottom: 2.5rem;
  font-weight: 600;
  letter-spacing: 0.02em;
  color: var(--color-text);
  line-height: 1.5;
}

.prose h3 {
  font-size: 1.2rem;
  margin-top: 4rem;
  margin-bottom: 2rem;
  font-weight: 400;
  letter-spacing: 0.02em;
  color: var(--color-text);
  line-height: 1.5;
}

.prose h4 {
  font-size: 1.1rem;
  margin-top: 3.5rem;
  margin-bottom: 1.8rem;
  font-weight: 400;
  letter-spacing: 0.02em;
  color: var(--color-text);
  line-height: 1.5;
}

.prose p {
  margin-bottom: 1.8rem;
  color: var(--color-text);
  line-height: 1.9;
}

.prose blockquote {
  padding-left: 2rem;
  margin: 3.5rem 0;
  opacity: 0.75;
  font-style: italic;
  color: var(--color-text);
  font-size: 1.05rem;
  line-height: 1.8;
  letter-spacing: 0.01em;
  position: relative;
}

.prose blockquote::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 1px;
  background: linear-gradient(to bottom, 
    transparent 0%, 
    var(--color-text) 20%, 
    var(--color-text) 80%, 
    transparent 100%);
  opacity: 0.25;
}

.prose ul, .prose ol {
  margin: 2.5rem 0;
  padding-left: 2rem;
  color: var(--color-text);
}

.prose li {
  margin-bottom: 0.8rem;
  line-height: 1.8;
}

.prose strong {
  font-weight: 600;
  color: var(--color-text);
}

.prose em {
  font-style: italic;
  color: var(--color-text);
  opacity: 0.9;
}

      /* レスポンシブデザイン */
@media (max-width: 768px) {
  .container {
    padding: 40px 15px;
  }
  
  h1 {
    font-size: 2.5rem !important;
    letter-spacing: 0.03em !important;
  }
  
  nav li {
    margin-bottom: 2.5rem !important;
  }
}
/* 記事内画像の美しい表示設定 */
.prose img {
  /* PC: 文章幅より少し広く、左右対称に中央配置 */
  width: calc(100% + 40px);
  margin-left: -20px;
  margin-right: -20px;
  height: auto;
  margin-top: 3rem;
  margin-bottom: 3rem;
  display: block;
  border-radius: 3px;
  box-shadow: 0 2px 8px rgba(0, 57, 162, 0.06);
}

/* 画像キャプション（イタリック文字）のスタイル */
.prose p em {
  display: block;
  text-align: center;
  font-size: 0.9rem;
  opacity: 0.7;
  margin-top: -2rem;
  margin-bottom: 3rem;
  font-style: italic;
  letter-spacing: 0.02em;
}

/* レスポンシブ対応 */
@media (max-width: 768px) {
  .prose img {
    /* スマホ: 画面幅いっぱいに表示 */
    width: 100vw;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 2.5rem;
    margin-bottom: 2.5rem;
  }
  
  .prose p em {
    margin-top: -1.5rem;
    margin-bottom: 2.5rem;
    font-size: 0.85rem;
  }
}
    </style>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>