---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    
    <!-- Google Fonts: Source Serif Pro -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600&display=swap" rel="stylesheet">
    
    <!-- SEO対策の基本設定 -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:locale" content="ja_JP" />
    <link rel="canonical" href={Astro.url} />
    
    <style is:global>
      :root {
        --font-serif-en: 'Source Serif Pro', serif;
        --font-mincho-jp: 'BIZ UDPMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', serif;
        --color-background: #e5e8f7;
        --color-text: #0039a2;
      }

      body {
        font-family: var(--font-mincho-jp);
        background-color: var(--color-background);
        color: var(--color-text);
        margin: 0;
        padding: 0;
        line-height: 1.8;
      }

      .container {
        max-width: 700px;
        width: 90%;
        margin: 0 auto;
        padding: 60px 20px;
      }

      h1, h2, h3 {
        font-family: var(--font-serif-en);
        color: var(--color-text);
        font-weight: 400;
      }

      a {
        color: var(--color-text);
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: all 0.3s ease;
        }

      a:hover {
        opacity: 1.0;
        border-bottom: 1px solid var(--color-text);
        }

      section {
        margin-bottom: 80px;
      }

      /* レスポンシブデザイン */
@media (max-width: 768px) {
  .container {
    padding: 40px 15px;
  }
  
  h1 {
    font-size: 2.5rem !important;
    letter-spacing: 0.03em !important;
  }
  
  nav li {
    margin-bottom: 2.5rem !important;
  }
}
    </style>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>