---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    
    <!-- 最適化されたフォント読み込み -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600&display=swap">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600&display=swap" media="print" onload="this.media='all'">
<noscript>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600&display=swap">
</noscript>
    
    <!-- SEO対策の基本設定 -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:locale" content="ja_JP" />
    <link rel="canonical" href={Astro.url} />

    <!-- SEO強化 -->
<meta name="author" content="夏目" />
<meta name="robots" content="index, follow" />

<!-- OGP画像設定（PNG版） -->
<meta property="og:title" content={title} />
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content="夏目" />
<meta property="og:locale" content="ja_JP" />
{description && <meta property="og:description" content={description} />}
<meta property="og:image" content={`${Astro.site}images/site/ogp-default.png`} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:type" content="image/png" />

<!-- Twitter Card（summary形式） -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content={title} />
{description && <meta name="twitter:description" content={description} />}
<meta name="twitter:image" content={`${Astro.site}images/site/ogp-default.png`} />

<!-- JSON-LD構造化データ -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "夏目",
  "description": "これはただの記録。",
  "url": {Astro.site},
  "author": {
    "@type": "Person",
    "name": "夏目"
  }
}
</script>
    
<style is:global>
  :root {
    --font-serif-en: 'Source Serif Pro', serif;
    --font-mincho-jp: 'BIZ UDPMincho', '游明朝', 'Yu Mincho', 'ヒラギノ明朝 ProN W3', serif;
    --color-background: #e5e8f7;
    --color-text: #0039a2;
    
    /* レンダリング最適化 */
    font-display: swap;
  }

  /* フォント描画最適化 */
  * {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    font-family: var(--font-mincho-jp);
    background-color: var(--color-background);
    color: var(--color-text);
    margin: 0;
    padding: 0;
    line-height: 1.8;
  }

  .container {
    max-width: 700px;
    width: 90%;
    margin: 0 auto;
    padding: 60px 20px;
  }

  h1, h2, h3 {
    font-family: var(--font-serif-en);
    color: var(--color-text);
    font-weight: 400;
  }

  a {
    color: var(--color-text);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
  }

  a:hover {
    opacity: 1.0;
    border-bottom: 1px solid var(--color-text);
  }

  section {
    margin-bottom: 80px;
  }

  /* 記事見出しのスタイル（余白メインの静かなデザイン） */
  .prose h2 {
    font-size: 1.3rem;
    margin-top: 5rem;
    margin-bottom: 2.5rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    color: var(--color-text);
    line-height: 1.5;
    text-align: left; /* 見出しは左揃えを維持 */
  }

  .prose h3 {
    font-size: 1.2rem;
    margin-top: 4rem;
    margin-bottom: 2rem;
    font-weight: 400;
    letter-spacing: 0.02em;
    color: var(--color-text);
    line-height: 1.5;
    text-align: left; /* 見出しは左揃えを維持 */
  }

  .prose h4 {
    font-size: 1.1rem;
    margin-top: 3.5rem;
    margin-bottom: 1.8rem;
    font-weight: 400;
    letter-spacing: 0.02em;
    color: var(--color-text);
    line-height: 1.5;
    text-align: left; /* 見出しは左揃えを維持 */
  }

  .prose p {
    margin-bottom: 1.8rem;
    color: var(--color-text);
    line-height: 1.9;
    text-indent: 1em;
    
    /* 左右ガタガタ改善のための追加 */
    text-align: justify;           /* 両端揃え */
    text-justify: inter-ideograph; /* 日本語に最適化 */
    word-break: auto-phrase;       /* 自然な改行位置 */
  }

  .prose blockquote {
    padding-left: 2rem;
    margin: 3.5rem 0;
    opacity: 0.75;
    font-style: italic;
    color: var(--color-text);
    font-size: 1.05rem;
    line-height: 1.8;
    letter-spacing: 0.01em;
    position: relative;
  }

  .prose blockquote::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 1px;
    background: linear-gradient(to bottom, 
      transparent 0%, 
      var(--color-text) 20%, 
      var(--color-text) 80%, 
      transparent 100%);
    opacity: 0.25;
  }

  .prose ul, .prose ol {
    margin: 2.5rem 0;
    padding-left: 2rem;
    color: var(--color-text);
  }

  .prose li {
    margin-bottom: 0.8rem;
    line-height: 1.8;
    
    /* リスト項目にも両端揃えを適用 */
    text-align: justify;
    text-justify: inter-ideograph;
    word-break: auto-phrase;
  }

  .prose strong {
    font-weight: 600;
    color: var(--color-text);
  }

  .prose em {
    font-style: italic;
    color: var(--color-text);
    opacity: 0.9;
  }

  /* 記事内画像の美しい表示設定 */
  .prose img {
    width: calc(100% + 40px);
    margin-left: -20px;
    margin-right: -20px;
    height: auto;
    margin-top: 3rem;
    margin-bottom: 3rem;
    display: block;
    border-radius: 3px;
    box-shadow: 0 2px 8px rgba(0, 57, 162, 0.06);
    image-rendering: high-quality;
    image-rendering: -webkit-optimize-contrast;
    transition: opacity 0.3s ease;
  }

  /* 画像キャプション（イタリック文字）のスタイル */
  .prose p em {
    display: block;
    text-align: center;
    font-size: 0.9rem;
    opacity: 0.7;
    margin-top: -2rem;
    margin-bottom: 3rem;
    font-style: italic;
    letter-spacing: 0.02em;
  }

  /* 外部リンクの美しい自動識別（サイト全体適用） */
  a[href^="http"]:not([href*="lmxou.me"])::after {
    content: " ↗";
    font-size: 0.75em;
    opacity: 0.6;
    margin-left: 0.12em;
    transition: opacity 0.3s ease;
    vertical-align: text-top;
    font-family: var(--font-serif-en);
    letter-spacing: 0;
  }

  /* ホバー時の控えめな変化 */
  a[href^="http"]:not([href*="lmxou.me"]):hover::after {
    opacity: 0.8;
  }

  /* 内部リンクには適用しない */
  a[href^="/"]::after,
  a[href^="#"]::after,
  a[href^="mailto:"]::after {
    content: none;
  }

  /* 記事内での外部リンクの特別な配慮 */
  .prose a[href^="http"]:not([href*="lmxou.me"])::after {
    font-size: 0.7em;
    opacity: 0.65;
    margin-left: 0.11em;
  }

  /* レスポンシブデザイン */
  @media (max-width: 768px) {
    .container {
      padding: 40px 15px;
    }
    
    h1 {
      font-size: 2.5rem !important;
      letter-spacing: 0.03em !important;
    }
    
    nav li {
      margin-bottom: 2.5rem !important;
    }

    /* スマホでの文字サイズ調整（理想的なバランス） */
    body {
      font-size: 0.97rem;    /* 0.95rem → 0.97rem に変更 */
    }

    .prose p {
      font-size: 0.97rem;    /* 0.95rem → 0.97rem に変更 */
      line-height: 1.87;     /* 1.85 → 1.87 に微調整 */
      text-align: justify;   /* スマホでも両端揃えを維持 */
    }

    .prose li {
      font-size: 0.97rem;    /* 0.95rem → 0.97rem に変更 */
    }

    .prose h2 {
      font-size: 1.25rem;    /* 1.2rem → 1.25rem に変更 */
    }

    .prose h3 {
      font-size: 1.15rem;    /* 1.1rem → 1.15rem に変更 */
    }

    .prose h4 {
      font-size: 1.05rem;    /* 変更なし */
    }

    .prose img {
      width: 100vw;
      position: relative;
      left: 50%;
      transform: translateX(-50%);
      margin-top: 2.5rem;
      margin-bottom: 2.5rem;
    }
    
    .prose p em {
      margin-top: -1.5rem;
      margin-bottom: 2.5rem;
      font-size: 0.85rem;
    }
  }
</style>

  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>